#include<stdio.h>

int main()
{
    int arr[100];  // 假设最多100个数字
    int n;
    
    // 输入数组大小
    printf("请输入要排序的数字个数: ");
    scanf("%d", &n);
    
    // 输入数组元素
    printf("请输入%d个整数: ", n);
    for (int i = 0; i < n; i++)
    {
        scanf("%d", &arr[i]);
    }
    
    // 显示排序前
    printf("排序前: ");
    for (int i = 0; i < n; i++)
    {
        printf("%d ", arr[i]);
    }
    printf("\\n");
    
    // 气泡排序
    for (int i = 0; i < n - 1; i++)
    {
        for (int j = 0; j < n - 1 - i; j++)
        {
            if (arr[j] > arr[j + 1])
            {
                // 交换
                int temp = arr[j];
                arr[j] = arr[j + 1];
                arr[j + 1] = temp;
            }
        }
    }
    
    // 显示排序后
    printf("排序后: ");
    for (int i = 0; i < n; i++)
    {
        printf("%d ", arr[i]);
    }
    printf("\\n");
    
    return 0;
}
