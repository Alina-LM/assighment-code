#include <stdio.h>

int main() {
    int triangle[10][10];
    int i, j;

    // 生成杨辉三角
    for (i = 0; i < 10; i++) {
        for (j = 0; j <= i; j++) {
            if (j == 0 || j == i) triangle[i][j] = 1;
            else triangle[i][j] = triangle[i - 1][j - 1] + triangle[i - 1][j];
        }
    }
    for (i = 0; i < 10; i++)
    {
        for (j = 0; j < (10 - i - 1); j++)
        printf("  ");//居中显示，循环控制看要显示多少行，如果十行，那么就最多有9个空格
        for (j = 0; j <= i; j++)
            printf("%d ", triangle[i][j]);
        printf("\n");
    }
}
