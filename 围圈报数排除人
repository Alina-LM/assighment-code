#include<stdio.h>
int main()
{
    int n, i, count = 0, remain, num = 0;

    printf("请输入总人数n: ");
    scanf("%d", &n);
        int people[101] = { 0 };
        int* p = people;

        // 1. 初始化数组，给每个人编号
        for (i = 0; i < n; i++) {
            *(p + i) = i + 1;  // 第i个人的编号是i+1
        }

        remain = n;  // 剩余人数
        i = 0;       // 当前报数索引

        // 2. 开始报数淘汰
        while (remain > 1) {
            // 如果当前位置的人还没退出
            if (*(p + i) != 0) {
                count++;  // 报数
                if (count == 3) {
                    // 报到3的人退出
                    printf("淘汰: %d号\n", *(p + i));
                    *(p + i) = 0;  // 标记为0表示退出
                    count = 0;     // 重新开始报数
                    remain--;      // 剩余人数减1
                }
            }
            // 移动到下一个人
            i++;
            // 如果到达末尾，回到开头
            if (i == n) {
                i = 0;
            }
        }
        // 3. 找出最后留下的人
        for (i = 0; i < n; i++) {
            if (*(p + i) != 0) {
                printf("\n最后留下的是原来第%d号\n", *(p + i));
                break;
            }
        }

    }
