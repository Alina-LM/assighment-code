#include<stdio.h>
#define N 13
struct person
{
	int number;
	int next;
}link[N + 1];
int main()
{
	int i, count, h;
	for (i = 1;i <= N;i++)
	{
		if (i == N)link[i].next = 1;
		else link[i].next = i + 1;
		link[i].number = i;
	}
	printf("\n");
	count = 0;h = N;
	printf("退圈顺序：\n");
	while (count < N-1)
	{
		i = 0;
		while (i != 3)
		{
			h = link[h].next;
			if (link[h].number)i++;
		}
		printf("%3d", link[h].number);
		link[h].number = 0;
		count++;
	}
	printf("\n最后一个人为：\n");
	for (i = 1;i <= N;i++)
		if (link[i].number)printf("%3d\n", link[i].number);
	return(0);
}
